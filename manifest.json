{
  "manifest_version": 3,
  "name": "X Following Tracker",
  "version": "2.0",
  "description": "Extracts your following list + mutuals",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}